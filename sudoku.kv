#:set padding 20

<MainGrid>:
    rows: 3
    cols: 3
    spacing: 15

<SubGrid>:
    rows: 3
    cols: 3

<Cell>:
    size_hint_x: 1
    size_hint_y: 1
    font_size: 30

BoxLayout:
    padding: 10
    spacing: 10
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 3
        padding: 10
        MainGrid:
            id: main_grid
            center: root.center
            size: [min(root.width, root.height) - 2 * padding] * 2
    BoxLayout:
        size_hint_y: 1
        padding: 10
        SubGrid:
            id: number_grid
            center: root.center
            size_hint_x: 1
            size: [min(root.width, root.height) - 2 * padding] * 2
            padding: [0, 0, 10, 0]
        Button:
            id:reset
            size_hint_x: .5
            text:'Reset'
            on_press:app.reset()
        Button:
            id:solve
            size_hint_x: .5
            text:'Solve'
            on_press:app.solve()
