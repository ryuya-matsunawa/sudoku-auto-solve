#:set padding 20

<MainGrid>:
    rows: 3
    cols: 3
    spacing: 15

<SubGrid>:
    rows: 3
    cols: 3

<Cell>:
    size_hint_x: 1
    size_hint_y: 1
    font_size: 30

BoxLayout:
    padding: '15dp'
	spacing: '15dp'
	orientation: 'vertical'
	canvas:
		Color:
			rgb: 0xfa / 255., 0xf8 / 255., 0xef / 255.
		Rectangle:
			pos: self.pos
			size: self.size
    AnchorLayout:
        id: anchor

        MainGrid:
            id: main_grid
            size_hint: None, None
            size: [min(anchor.width, anchor.height)] * 2
    BoxLayout:
        size_hint_y: 0.5
        AnchorLayout:
            id: anchor2
            SubGrid:
                id: number_grid
                size_hint: None, None
                size: [min(anchor2.width, anchor2.height)] * 2
        Button:
            id:reset
            size_hint_x: .5
            text:'Reset'
            on_press:app.reset()
        Button:
            id:solve
            size_hint_x: .5
            text:'Solve'
            on_press:app.solve()
